@{
    Layout = "~/Views/Shared/_PassportLayout.cshtml";

    string cdnFileRoot = CC.ERP.Portal.Global.CDNFileRoot;
    ViewData.Add("cdnFileRoot", cdnFileRoot);
}

@model CC.ERP.Portal.Models.RegisterModel
<style>
    .RegisterSuc_wra {
        text-align: center;
        position: relative;
        background-color: #3697d5;
        width: 100%;
        height: 450px;
    }

    .RegisterSuc_contentwra {
        position: absolute;
        z-index: 10;
        left: 50%;
        margin-left: -255px;
        top: 155px;
    }

    .RegisterSuc_content {
        width: 460px;
        background-color: #fff;
        padding: 80px 0 50px 0;
        border-radius: 5px;
        box-shadow: 0px 0px 10px #B1B1B1;
    }

    .RegisterSuc_tips {
        font-size: 22px;
        color: #39a703;
    }

        .RegisterSuc_tips i {
            font-size: 32px;
            position: relative;
            top: 4px;
            left: -10px;
        }

        .RegisterSuc_tips img {
            margin-right: 12px;
        }

    .RegisterSuc_time {
        margin: 30px 0 34px 0;
        font-size: 17px;
    }

    .RegisterSuc_btn {
        display: inline-block;
        background-color: #ffae00;
        padding: 0 25px;
        font-size: 19px;
        border-radius: 3px;
        height: 40px;
        line-height: 40px;
        width: 180px;
        box-shadow: 0px 2px 8px #C1C1C1;
    }

        .RegisterSuc_btn:focus {
            color: #fff;
            text-decoration: none+;
        }

        .RegisterSuc_btn:hover {
            color: #fff;
            text-decoration: none+;
        }

    .bottom_img {
        height: 170px;
        width: 325px;
        margin: 0 auto;
    }

        .bottom_img img {
            margin-bottom: 5px;
            width: 120px;
        }

        .bottom_img div {
            float: left;
            text-align: center;
            margin: 0 20px;
        }

            .bottom_img div span {
                display: block;
                font-size: 15px;
            }

    .RegisterSuc_time span {
        color: #ff0000;
    }

    .RegisterSuc_contentwra .bot_tel {
        margin-top: 85px;
    }

    .gift {
        position: relative;
    }

        .gift img {
            position: absolute;
            top: -10px;
            left: 85px;
        }
</style>
<div class="RegisterSuc_wra">

    <div class="RegisterSuc_contentwra">
        <div style="margin-bottom:50px;" class="text-center">
            <img src="@(cdnFileRoot)/Images/3.0/account/register_logo.png" />
        </div>
        <div class="RegisterSuc_content">
            <div class="RegisterSuc_tips">
                <i class="iconfont icon-right"></i>恭喜您，注册成功!
            </div>
            <div class="RegisterSuc_time">
                欢迎使用来肯云商产品! <span><span id="RegisterSuc_time">5</span>秒</span>后自动进入产品
            </div>

            <a class="RegisterSuc_btn btn" href="/account/enterproduct">立 即 前 往</a>
        </div>
        <div class="bot_tel">如遇登录问题，请拨打@(CC.ERP.Portal.Controllers.Public.agent_cellphone)</div>
    </div>
</div>
<script>
    var t = 6;
    function showTime() {
        t -= 1;
        document.getElementById('RegisterSuc_time').innerHTML = t;
        if (t == 0) {
            location.href = '/account/enterproduct';
        } else if (t < 0) {
            document.getElementById('RegisterSuc_time').innerHTML = 0;
        }
        setTimeout("showTime()", 1000);
    }
    showTime();

</script>

