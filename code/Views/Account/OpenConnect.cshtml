@using CC.Public
@model HashObject
@{
    ViewBag.Title = Model.GetString("msg");
    Layout = "~/Views/Shared/_PassportLayout.cshtml";

    string cdnFileRoot = CC.ERP.Portal.Global.CDNFileRoot;
    ViewData.Add("cdnFileRoot", cdnFileRoot);
}

<style>
    #login{
        height:470px;
        /*background-color: #3697d5;*/
    }
    #login .logo_img{
        padding:10px;
        margin-bottom: 55px;
    }
     #login .bg_img img{
         height:474px;
         width:100%;
     }
   #login  .content_wrapper{
           width: 550px;
            height: 210px;
            text-align: center;
            margin: -205px 0 0 -275px;
            border: 1px solid #e5e5e5;
            background-color: #fafafc;
            background-color: #fff;
            position: absolute;
            left: 50%;
            top: 50%;
    }
   #login  .content_wrapper div{
       margin:60px 0 30px 0;
       color:red;
       font-size:18px;
   }
   #login  .content_wrapper a{
          display: inline-block;
            padding: 7px 30px;
            font-size: 16px;
            border: 1px solid #38adff;
            color: #38adff;
            margin-top: 8px;
            border-radius:5px;
   }
</style>
<div class="wra_same" id="login">
    <div class="logo_img"><img src="@(cdnFileRoot)/Images/3.0/account/samelogo.png" /></div>
    <div class="bg_img"><img src="@(cdnFileRoot)/Images/3.0/account/samebgimg.jpg" /></div>   
   
    <div class="regster_content" id="login2">
        <div class="content_wrapper">
            <div>@Model.GetString("msg")</div>
            @if (Model.GetString("type") == "needconfirm")
            {
                <a  href='@Request.Url.ToString()&confirm=true'>接入</a>
            }
            else if (Model.GetString("type") == "exists")
            {
                <a  href='/Account/Logon'>去解绑</a>
            }
            else
            {
                <a  href='/'>返回首页</a>
            }
        </div>
    </div>
</div>

