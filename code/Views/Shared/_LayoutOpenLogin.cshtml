                                {
                                    <img src="@(cdnFileRoot)/Images/3.0/common/download_mobile4.0.png" style="margin:0 !important;" title="App下载" />
                                    <div><a id="pcDownload" href="@(CC.ERP.Portal.Global.DownloadForClient)" target="_blank">PC端下载</a></div>
                                }
                                else
                                {
                                    <img src="@(CC.ERP.Portal.Controllers.Public.GetAgentQrCode())" style="margin:0 !important;" />
                                    <div><a id="pcDownload" href="javascript:;" target="_blank">微信公众号</a></div>
