                                          && AgentInfo.Current.Contactor_Agents.Count > 0)
                                {
                                    foreach (HashObject obj in AgentInfo.Current.Contactor_Agents)
                                    {
                                        <li>
                                            <span></span>
                                            <a target="_blank" href="@string.Format("http://wpa.qq.com/msgrd?v=3&uin={0}&site=qq&menu=yes", obj.GetString("contactnumber"))" title="点此咨询">
